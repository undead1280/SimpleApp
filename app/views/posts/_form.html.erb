<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |err| %>
    <div class="alert alert-danger"><%= err %></div>
  <% end %>
<% end %>
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <br>
    <h2><%= t('common.translate')%>:</h2>
    <br>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </p>
  <p>
    <h2><%= t('common.desc')%>:</h2>
    <br>
    <%= f.text_area(:summary, {:class => 'form-control'}) %>
  </p>
  <h2><%= t('common.category')%>:</h2>
  <table>
    <b><%= t('common.fantasy')%>: <%= f.text_field(:exnd_date, {:type => 'radio', :value => t('common.fantasy')}) %><br>
      <%= t('common.adventure')%>: <%= f.text_field(:exnd_date, {:type => 'radio', :value => t('common.adventure')}) %><br>
      <%= t('common.action')%>: <%= f.text_field(:exnd_date, {:type => 'radio', :value => t('common.action')}) %><br>
      <%= t('common.melodram')%>: <%= f.text_field(:exnd_date, {:type => 'radio', :value => t('common.melodram')}) %><br>
      <%= t('common.comedy')%>: <%= f.text_field(:exnd_date, {:type => 'radio', :value => t('common.comedy')}) %> </b>
  </table>
</p>
<p>
  <h2><%= t('common.tags')%>:</h2>
  <br>
  <%= f.text_field :all_tags, class: 'form-control' %>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
</p>
<%= f.submit ({:value => t('common.button.save'), :class => 'btn btn-success'})%>
</p>
<%end%>
